@model RadioCabs.Models.Driver

<section class="bg-black p-4">
    <h3 class="mb-3 text-white">Driver registration</h3>
    <form id="driverRegistrationForm" asp-controller="Home" asp-action="Drivers" method="post">
        @Html.AntiForgeryToken()
        <div class="row g-3">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="DriverName" class="form-label">Driver Name</label>
                    <input asp-for="DriverName" type="text" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label asp-for="ContactPerson" class="form-label">Contact Person</label>
                    <input asp-for="ContactPerson" type="text" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label">City</label>
                    <input asp-for="City" type="text" class="form-control" required>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" type="text" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label asp-for="Mobile" class="form-label">Mobile Number</label>
                    <input asp-for="Mobile" type="tel" class="form-control" pattern="[0-9]{11}" required>
                </div>

                <div class="mb-3">
                    <label asp-for="Telephone" class="form-label">Telephone</label>
                    <input asp-for="Telephone" type="tel" class="form-control">
                </div>

                <div class="mb-3">
                    <label asp-for="Experience" class="form-label">Experience</label>
                    <input asp-for="Experience" type="number" class="form-control">
                </div>
            </div>
        </div>

        <!-- Bottom Section -->
        <div class="row g-3">
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" required>
                </div>
            </div>

            <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">About yourself</label>
                        <input asp-for="Description" type="text" class="form-control" required> 
                    </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="PaymentType" class="form-label">Payment Type</label>
                    <select asp-for="PaymentType" class="form-select" id="paymentType" required>
                        <option value="">Select</option>
                        <option value="Monthly">Monthly</option>
                        <option value="Quarterly">Quarterly</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Amount Display -->
        <div class="alert alert-warning mt-3" id="amountDisplay" style="display: none;">
            Payable Amount: <strong>$<span id="amount">0</span></strong>
        </div>

        <button type="submit" class="btn btn-warning btn-lg w-100 mt-4">
            Register Now
        </button>
    </form>
</section>